<!DOCTYPE html>
html(lang="en")
    head
        include partials/header
    
    body.login

        .contenedor-formulario
            

            form#formulario.caja.caja-login(method="POST" action="/crear-cuenta" ) 
                h1 Crea tu Cuenta

                if locals.mensajes
                    .alertas 
                        each categoria in Object.keys(locals.mensajes) 
                            each error in mensajes[categoria]
                                .alerta(class=`${categoria}`)
                                    p= error
                br
                .campo 
                    label(for= "email") E-mail: 
                    input(type="email" name="email" placeholder="gompachiro@gmail.com" value=email required)
                .campo
                    label(for= "password") Password: 
                    input(type="password" name="password" placeholder="Ingrese su contrase√±a" value=password required)
                .campo.enviar
                    input(type="submit" value="Crear Cuenta" class="boton")
                .campo 
                    a(href="/iniciar-sesion") Iniciar Sesion

        script(src="/dist/bundle.js")